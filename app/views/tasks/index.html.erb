<div class="container">
  <h2>My tasks</h2>

  <% @tasks.each do |task| %>
    <div class="task flex">
      <%= task.completed ? icon('fas', 'check-square') : icon('far', 'square') %>
      <h3><%= task.title %></h3>
      <%= link_to icon('fas', 'edit'), edit_task_path(task) %>
      <%= link_to icon('fas', 'times'), task_path(task) , method: :delete, data: { confirm: "Are you sure ?"} %>
    </div>
  <% end %>
</div>
